---
const response = await fetch("https://jsonplaceholder.typicode.com/comments");
const comments = await response.json() as { id: number; name: string; email: string; body: string }[];

//name; email; body;
---

<link rel="stylesheet" href="../../public/styles/card.css">

{
    comments.map(comm => (
        <div class="card">
            <h2>Titulo: {comm.name}</h2>
            <h4>Email: {comm.email}</h4>
            <p>Contenido: {comm.body}</p>
        </div>
    ))
}